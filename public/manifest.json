{
  "manifest_version": 3,
  "name": "YouTube Study Time Tracker",
  "version": "1.0.0",
  "description": "Monitor YouTube activity to track study time vs fun time and improve productivity",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "background",
    "notifications"
  ],
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://youtube.com/*",
    "*://www.googleapis.com/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*", "*://youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "YouTube Study Tracker"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["*://www.youtube.com/*", "*://youtube.com/*"]
    }
  ]
}

